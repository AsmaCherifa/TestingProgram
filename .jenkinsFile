pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                git 'https://github.com/AsmaCherifa/TestingProgram.git'
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    docker.build('testingprogram')
                }
            }
        }

        stage('Run Tests') {
            steps {
                script {
                    // Run the container and execute tests inside it
                    docker.image('testingprogram').inside {
                        sh 'mvn test'
                    }
                }
            }
        }

        stage('Deploy') {
            steps {
                script {
                    // Run the container to deploy the app
                    docker.image('testingprogram').run("-p 8087:8087")
                }
            }
        }
    }
}
