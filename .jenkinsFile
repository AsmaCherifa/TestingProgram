pipeline {
    agent any

    stages {
        stage('Clone Repository') {
            steps {
                // Cloning the repository
                git 'https://github.com/AsmaCherifa/TestingProgram.git'
            }
        }
        
        stage('Build Docker Image') {
            steps {
                script {
                    // Building the Docker image using the Dockerfile in the repository
                    docker.build('testingprogram')
                }
            }
        }

      

stage('Run Tests') {
    steps {
        script {
            docker.image('testingprogram').inside('-w /app') {
                sh 'mvn test'
            }
        }
    }
}



        stage('Deploy') {
            steps {
                script {
                    // Run the Docker container and expose the application port
                    docker.image('testingprogram').run("-p 8087:8087")
                }
            }
        }
    }
}
